{
  "$schema": "./node_modules/@angular/service-worker/config/schema.json",
  "index": "/index.html",
  "navigationUrls": [
    "/dashboard",
    "/dashboard/**",
    "/profile",
    "/profile/**",
    "/blog/**",
    "/fediverse/post/**",
    "/search",
    "/search/**",
    "/admin",
    "/admin/**",
    "/privacy"
  ],
  "assetGroups": [
    {
      "name": "app",
      "installMode": "prefetch",
      "resources": {
        "files": [
          "/favicon.ico",
          "/index.html",
          "/manifest.webmanifest",
          "/*.css",
          "/*.js",
          "/assets/logo.png",
          "/assets/logo_mascot.png",
          "/assets/i18n/*",
          "/assets/fonts/*",
          "/assets/sounds/*"
        ]
      }
    },
    {
      "name": "assets",
      "installMode": "prefetch",
      "updateMode": "prefetch",
      "resources": {
        "files": [
          "/assets/*.(svg|cur|jpg|jpeg|png|apng|webp|avif|gif|otf|ttf|woff|woff2)"
        ]
      }
    }
  ],
  "dataGroups": [
    {
      "name": "api",
      "urls": ["https://api.wafrn.net/**"],
      "cacheConfig": {
        "strategy": "freshness",
        "maxSize": 1,
        "maxAge": "1s",
        "timeout": "3000s"
      }
    },
    {
      "name": "media",
      "urls": [
        "https://cache.wafrn.net/**",
        "https://media.wafrn.net/**",
        "https://wafrnmedia.b-cdn.nett/**",
        "https://wafrnmediacache.b-cdn.net/**",
        "https://wafrncache.b-cdn.net/**",
        "https:/cdn.wafrn.net/**"

      ],
      "cacheConfig": {
        "strategy": "performance",
        "maxSize": 850,
        "maxAge": "3d",
        "timeout": "30s"
      }
    }
  ]
}
